/*
 * The "echoes" status bar for LiCe, adapted for DarkStar/EPIC4
 * Author: Brian Weiss <brian@epicsol.org>
 *
 * This is here to go along with the echoes theme, and happens
 * to be a pretty awesome statbar. I was able to take this straight
 * from LiCe with very few modifications, so I deserve little credit
 * for it. The original comment follows.
 */

assign STATUS.DOUBLE 1

# LiCe cosmetics
# author: whitefang[thall@strlen.net]
# port of "echoes" theme from rain by trey


set INPUT_PROMPT 16À15Ä14Ä15>-1 
set REVERSE_STATUS_LINE OFF
set STATUS_AWAY 15away14[16${AWAY.NEWMSGS ? AWAY.NEWMSGS : [0]}14] 
set STATUS_CHANNEL $left(24 $C)
set STATUS_CHANOP @
set STATUS_CLOCK %T
set STATUS_DOES_EXPANDOS ON
set STATUS_FORMAT 16Ä15Ä14[ 10%@15%N14/16%#10: 15%2 %>%Q%F15win14/16%R 14]15Ä16Ä
set STATUS_FORMAT1 15Ú16Â15Ä14[ 10%@15%N14/16%#10: 15%S %>%Q%F15win14/16%R 14]15Ä16¿
set STATUS_FORMAT2 16³15À14[-1 %C14/16%+10: %1 %>%H%M%A15time14/16%T 14]15Ù
set STATUS_HOLD 14\(more14\) 
set -STATUS_HOLD_LINES
set STATUS_MAIL 15mail14[16%M14] 
set STATUS_MODE +%+
set STATUS_NICKNAME $N
set STATUS_NO_REPEAT OFF
set STATUS_NOTIFY 15act14/16%F 
set STATUS_OPER *
set -STATUS_OVERWRITE
set STATUS_QUERY 14\(15query14/16$Q14\) 
set -STATUS_SCROLLBACK
set STATUS_SERVER $left(24 $servername($winserv()))
set STATUS_UMODE +%#
set STATUS_USER1 15o14/16$numwords($chanops()) 15n14/16$numwords($nochops()) 15t14/16$numonchannel()
set STATUS_VOICE +
set -STATUS_WINDOW


