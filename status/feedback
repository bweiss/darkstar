/* $Id$ */
/*
 * Created by Brian Weiss <brian@epicsol.org> - 2002
 * This is a simple but informative status bar with no high ASCII
 * characters and no color. This is basically a cross between the two
 * previously existing statbars, darkstar and epic4.
 */

assign STATUS.DOUBLE 1

set INPUT_PROMPT > 
set REVERSE_STATUS_LINE ON
set STATUS_AWAY  [A${AWAY[NEWMSGS] ? [: $AWAY.NEWMSGS] : []}]
set STATUS_CHANNEL  $left(24 $C)
set STATUS_CHANOP @
set STATUS_CLOCK  %T
set STATUS_CPU_SAVER  \(%L\)
set STATUS_DOES_EXPANDOS ON
set STATUS_FORMAT [%W%R%W] %Q
set STATUS_FORMAT1 [$Z] [%R] %*%=%@%N%#%C%+%H%B%I%O%Q%F%L %> %A
set STATUS_FORMAT2 %U%{2}S %>%M [%V]
set STATUS_HOLD  Held:
set STATUS_HOLD_LINES %B
set -STATUS_INSERT
set STATUS_MAIL  \(Mail: %M\)
set STATUS_MODE \(+%+\)
set STATUS_NICKNAME $N
set STATUS_NOTIFY  \(W: %F\)
set STATUS_NO_REPEAT OFF
set STATUS_OPER *
set STATUS_OVERWRITE  \(OT\)
set STATUS_QUERY  \(Query: $Q\)
set STATUS_SCROLLBACK  \(Scroll\)
set STATUS_SERVER [$left(24 $servername())]
set STATUS_TRUNCATE_RHS ON
set STATUS_UMODE \(+%#\)
set STATUS_USER ${numonchannel() ? [[t/$numonchannel() o/$#chops() n/$#nochops()]  ] : []}
set STATUS_VOICE +
set STATUS_WINDOW -


/* EOF */