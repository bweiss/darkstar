set STATUS_FORMAT1 36,-1ÖÄ[37$Z36]Ä[37%R36]Ä[56%*36%=%@37%N%#36]37%C%B36Ä%Q36Ä37%F36Ä%>%A36Ä·
set STATUS_FORMAT2 36,-1ÇÄ%U%{2}S36Ä%>%M36Ä[37$J36]Ä½
