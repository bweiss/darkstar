set STATUS_USER ${numonchannel() ? [36[-1t36/-1$numonchannel() o36/-1$#chops() n36/-1$#nochops()36]ÄÄ-1] : []}
set STATUS_VOICE 36+-1
set STATUS_WINDOW 56*-1

/*
 * Turn on the double status for all windows except those exempted by
 * the single_status array.
 */
for refnum in ($winrefs())
{
	@ :name = winnam($refnum)
	unless (matchitem(single_status $name) > -1)
	{
		^window $refnum double on
	}
}


