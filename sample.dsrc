/*
 * This is a sample initilization file for Darkstar. By default it should be
 * copied to ~/.dsrc
 *
 * If you wish to change its location/filename please set the environment
 * variable DARKSTAR_RC
 */

set AUTO_WHOWAS OFF
set BEEP OFF
set BEEP_MAX 0
set CLOCK_24HOUR ON
set -CONTINUED_LINE
set DCC_STORE_PATH ~/incoming
set INDENT ON
set LASTLOG 1024
set LOAD_PATH ~/.epic4:/usr/local/share/epic:.
set NEW_SERVER_LASTLOG_LEVEL NONE
set NO_FAIL_DISCONNECT ON
set SCROLLBACK 1024
set WORD_BREAK ,;


