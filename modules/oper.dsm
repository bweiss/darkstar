queue cleanup.oper
{
	^alias -operwall
	^on #381 427 -"*"
}

config.add OPER_UMODES wzsky


alias operwall (text)
{
	if (text)
	{
		//quote operwall :$text
	}{
		xecho -b Usage: /operwall <text>
	}
}

on #^381 427 "*"
{
	//mode $servernick() $CONFIG.OPER_UMODES
}


